<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:clickable="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/music_pic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:src="@drawable/song_play_icon"/>

    <ImageView
        android:visibility="gone"
        android:id="@+id/item_music_down"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@drawable/down_icon"/>


    <LinearLayout
        android:id="@+id/songinfo_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/music_pic"
        android:layout_toLeftOf="@+id/item_music_down"
        android:orientation="vertical"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/song_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:maxLines="1"
            android:gravity="center_vertical"
            android:text="歌曲"
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/song_singer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="歌手"
            android:ellipsize="marquee"
            android:maxLines="1"
            android:textSize="12dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/black"/>

</RelativeLayout>
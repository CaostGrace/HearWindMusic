<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/navigation_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="false"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/top_bac"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/topinfo_ban_bg" />

    <LinearLayout
        android:id="@+id/dingshi_close"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:clickable="true"
        android:layout_height="50dp"
        android:layout_below="@+id/top_bac"
        android:layout_alignParentStart="true">

        <ImageView
            android:src="@drawable/dingshi"
            android:layout_width="20dp"
            android:layout_gravity="center_vertical"
            android:layout_height="20dp"/>

        <TextView
            android:paddingLeft="20dp"
            android:text="定时关闭"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"/>


        <TextView
            android:id="@+id/shen_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="11:12:12"
            android:textSize="14dp"
            android:gravity="center_vertical"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/about"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:clickable="true"
        android:layout_height="50dp"
        android:layout_below="@+id/dingshi_close"
        android:layout_alignParentStart="true">

        <ImageView
            android:src="@drawable/about"
            android:layout_width="20dp"
            android:layout_gravity="center_vertical"
            android:layout_height="20dp"/>

        <TextView
            android:paddingLeft="20dp"
            android:text="关于我们"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/chech_update"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:clickable="true"
        android:layout_height="50dp"
        android:layout_below="@+id/about"
        android:layout_alignParentStart="true">

        <ImageView
            android:src="@drawable/update"
            android:layout_width="20dp"
            android:layout_gravity="center_vertical"
            android:layout_height="20dp"/>

        <TextView
            android:paddingLeft="20dp"
            android:text="检查更新"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"/>

    </LinearLayout>


    <LinearLayout
        android:layout_below="@+id/chech_update"
        android:id="@+id/leftmenu_exit"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:clickable="true"
        android:layout_height="50dp">

        <ImageView
            android:src="@drawable/exit"
            android:layout_width="20dp"
            android:layout_gravity="center_vertical"
            android:layout_height="20dp"/>

        <TextView
            android:paddingLeft="20dp"
            android:text="退出"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>


</RelativeLayout>

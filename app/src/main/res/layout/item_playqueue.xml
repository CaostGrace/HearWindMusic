<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:clickable="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/play_state"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:src="@drawable/song_play_icon"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_toLeftOf="@+id/play_list_delete"
        android:layout_toRightOf="@+id/play_state"
        android:orientation="vertical"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/song_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="歌曲"
            android:ellipsize="marquee"
            android:maxLines="1"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/song_singer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:maxLines="1"
            android:gravity="center_vertical"
            android:text="歌手"
            android:textSize="14dp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/play_list_delete"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="?android:attr/selectableItemBackground"
        android:focusable="false"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@drawable/note_btn_close_white"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/black"/>

</RelativeLayout>